<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="MainToolbarWhite">
        <item name="android:navigationBarColor">@color/colorWhite</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarTextAppearance.Title.White">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle.White">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
